{{define "title"}}Snippet #{{.ID}}{{end}}

{{define "main"}}
<div class="flex flex-col bg-blue-900 border-2 border-blue-300 text-white container mx-auto px-4">
    <div class="flex py-2 px-4 items-center border-b-2 border-blue-300 justify-between">
        <strong>{{.Title}}</strong>
        <span>#{{.ID}}</span>
    </div>
    <pre><code>{{.Content}}</code></pre>
    <div class="flex py-2 px-4 items-center border-t-2 border-blue-300 justify-between">
        <time>Created: {{.Created}}</time>
        <time>Expires: {{.Expires}}</time>
    </div>
</div>
{{end}}
