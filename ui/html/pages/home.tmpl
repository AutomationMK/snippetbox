{{define "title"}}Home{{end}}

{{define "main"}}
<div class="flex flex-col container mx-auto px-4 gap-6">
    <h2 class="text-2xl font-bold">Latest Snippets</h2>
    {{if .Snippets}}
    <table class="[&_tr]:even:bg-blue-100 [&_tr]:odd:bg-blue-200 grid">
        <tr class="grid grid-cols-3 p-4 justify-between [&_th]:text-left text-xl">
            <th>Title</th>
            <th>Created</th>
            <th>ID</th>
        </tr>
        {{range .Snippets}}
        <tr class="grid grid-cols-3 p-4 justify-between">
            <td>
                <a href="/snippet/view?id={{.ID}}"
                    class="bg-blue-900 px-4 py-2 rounded-md hover:brightness-125 text-white transition">
                    {{.Title}}
                </a>
            </td>
            <td>{{.Created}}</td>
            <td>#{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
    <p>There's nothing to see here yet!</p>
    {{end}}
</div>
{{end}}
